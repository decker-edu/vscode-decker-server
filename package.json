{
  "name": "decker-server",
  "displayName": "Decker Server",
  "description": "Automatically starts a decker server upon opening a decker workspace and offers commands to start and stop the server as well as logging utilities.",
  "version": "0.1.1",
  "publisher": "decker-edu",
  "repository": {
    "type": "git",
    "url": "https://github.com/decker-edu/vscode-decker-server"
  },
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/decker.yaml",
    "onCommand:decker-server.build",
    "onCommand:decker-server.crunch",
    "onCommand:decker-server.build",
    "onCommand:decker-server.publish",
    "onCommand:decker-server.start",
    "onCommand:decker-server.clean",
    "onCommand:decker-server.toggle",
    "onCommand:decker-server.open-browser",
    "onCommand:decker-server.open-preview"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Decker Server",
      "properties": {
        "decker.server.autostart": {
          "type": "boolean",
          "default": false,
          "description": "%extension.decker-server.config.autostart%"
        },
        "decker.server.port": {
          "type": "number",
          "default": 8888,
          "description": "%extension.decker-server.config.port%"
        },
        "decker.executable.command": {
          "type": "string",
          "default": "decker",
          "description": "%extension.decker-server.config.command%"
        }
      }
    },
    "menus": {
      "explorer/context": [
        {
          "submenu": "decker-server-submenu",
          "group": "decker/server"
        }
      ],
      "decker-server-submenu": [
        {
          "command": "decker-server.build",
          "group": "decker/server",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "decker-server.crunch",
          "group": "decker/server",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "decker-server.publish",
          "group": "decker/server",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "decker-server.clean",
          "group": "decker/server",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "decker-server.start",
          "group": "decker/server",
          "when": "explorerResourceIsFolder"
        }
      ],
      "commandPalette": [
        {
          "command": "decker-server.crunch",
          "when": "false"
        }
      ],
      "editor/context": [
        {
          "when": "resourceLangId == markdown",
          "command": "decker-server.open-browser"
        },
        {
          "when": "resourceLangId == markdown",
          "command": "decker-server.open-preview"
        }
      ],
      "editor/title": [
        {
          "when": "editorLangId == markdown",
          "command": "decker-server.open-preview",
          "group": "navigation"
        },
        {
          "when": "editorLangId == markdown",
          "command": "decker-server.open-browser",
          "group": "navigation"
        }
      ]
    },
    "submenus": [
      {
        "id": "decker-server-submenu",
        "label": "%extension.decker-server.context-submenu.label%",
        "icon": "$(globe)"
      }
    ],
    "commands": [
      {
        "command": "decker-server.start",
        "title": "%extension.decker-server.start.title%"
      },
      {
        "command": "decker-server.stop",
        "title": "%extension.decker-server.stop.title%"
      },
      {
        "command": "decker-server.toggle",
        "title": "%extension.decker-server.toggle.title%",
        "icon": "$(play-circle)"
      },
      {
        "command": "decker-server.build",
        "title": "%extension.decker-server.build.title%"
      },
      {
        "command": "decker-server.crunch",
        "title": "%extension.decker-server.crunch.title%"
      },
      {
        "command": "decker-server.clean",
        "title": "%extension.decker-server.clean.title%"
      },
      {
        "command": "decker-server.publish",
        "title": "%extension.decker-server.publish.title%"
      },
      {
        "command": "decker-server.open-browser",
        "title": "%extension.decker-server.open-browser.title%",
        "icon": "$(globe)"
      },
      {
        "command": "decker-server.open-preview",
        "title": "%extension.decker-server.open-preview.title%",
        "icon": "$(preview)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/command-exists": "^1.2.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "18.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "@vscode/test-electron": "^2.1.5",
    "del": "^6.0.0",
    "eslint": "^8.23.0",
    "event-stream": "^4.0.1",
    "glob": "^8.0.3",
    "gulp": "^4.0.2",
    "gulp-filter": "^7.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "mocha": "^10.0.0",
    "run-sequence": "^2.2.1",
    "ts-loader": "^9.3.1",
    "typescript": "4.7.4",
    "vsce": "^2.11.0",
    "vscode-nls-dev": "^4.0.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "command-exists": "^1.2.9",
    "open": "^8.4.0",
    "vscode-nls": "^5.2.0"
  }
}
